.row
    .small-6.columns
        h2 {{room.name}}
    .small-6.columns
        div.creator
            h4 Room Creator
            p {{room.creator.username}}
            img.owner(ng-src='{{room.creator.avatar}}')


.row
    .small-8.columns
        h3 Play a Game

    .small-4.columns
        h3 Room Chat
        #messages.panel.callout.radius
        input#message(type='text', ng-model='message', autofocus)
        button.success.tiny.radius(ng-click='chat(message)') Send Message
